<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:gravity="bottom"
        android:paddingBottom="20dp"
        >
        <TextView
            android:id="@+id/singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_gravity="center_horizontal"
            android:text="singer">
        </TextView>

        <TextView
            android:id="@+id/album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:textSize="30dp"
            android:layout_gravity="center_horizontal"
            android:text="album">
        </TextView>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:textSize="30dp"
            android:layout_gravity="center_horizontal"
            android:text="title">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/coverImage"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:src="@color/white">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/first_lyrics"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="1111111111111"
                android:gravity="center_horizontal"
                android:textColor="@color/white">
            </TextView>
            <TextView
                android:id="@+id/second_lyrics"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="22222222222222"
                android:gravity="center_horizontal"
                android:textColor="@color/white">
            </TextView>
            <TextView
                android:id="@+id/third_lyrics"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="33333333333333"
                android:gravity="center_horizontal"
                android:textColor="@color/white">
            </TextView>

        </LinearLayout>

        <SeekBar
            android:id="@+id/SeekBar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:max="200"
            android:progress="0"
            android:thumb="@drawable/ic_launcher_foreground">

        </SeekBar>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/playButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/black"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/sharp_play_arrow_white_36">

        </ImageButton>

    </LinearLayout>



</LinearLayout>